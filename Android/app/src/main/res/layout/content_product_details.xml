<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.ProductDetailsActivity"
    tools:showIn="@layout/activity_product_details">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#e3dede">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$85"
                        android:id="@+id/tvValue"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="20sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Black Tux"
                        android:id="@+id/tvName"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tvValue"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="16sp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40"
                        android:id="@+id/tvViewCount"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/ivViews"
                        android:src="@drawable/ic_views"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/tvViewCount"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:id="@+id/tvLikeCount"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/ivViews"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12sp"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/ivLikes"
                        android:src="@drawable/ic_like"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/tvLikeCount"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="sdfgsdfgsdfgsdfgsdfgsdfgsdfgsddfghdfghdffgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgsdfgf"
                        android:id="@+id/tvDescription"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/tvName"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posted 15 mins ago"
                        android:id="@+id/tvRelativeTimestamp"
                        android:layout_below="@+id/tvDescription"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"/>

                    <View style="@style/Divider"
                          android:layout_marginTop="10dp"
                          android:layout_below="@+id/tvRelativeTimestamp"
                          android:id="@+id/vDivider" />

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:id="@+id/ivSeller"
                        android:src="@mipmap/ic_launcher"
                        android:layout_below="@+id/vDivider"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Terry"
                        android:id="@+id/tvSeller"
                        android:layout_alignTop="@+id/ivSeller"
                        android:layout_toRightOf="@+id/ivSeller"
                        android:layout_toEndOf="@+id/ivSeller"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:id="@+id/llRatingBar"
                        android:layout_toRightOf="@+id/ivSeller"
                        android:layout_below="@+id/tvSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/ivCall"
                        android:src="@drawable/ic_call"
                        android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/ivSeller"
                        android:layout_marginTop="10dp"/>

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/ivMessage"
                        android:src="@drawable/ic_chat"
                        android:layout_toLeftOf="@+id/ivCall"
                        android:layout_alignTop="@+id/ivSeller"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"/>


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                card_view:cardElevation="3dp">

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/ivMarker"
                        android:src="@drawable/ic_marker"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Palo Alto"
                        android:id="@+id/tvLocation"
                        android:layout_alignTop="@+id/ivMarker"
                        android:layout_toRightOf="@+id/ivMarker"
                        android:layout_toEndOf="@+id/ivMarker"
                        android:layout_marginLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.6m away"
                        android:id="@+id/tvDistance"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="5dp"/>

                    <fragment
                        android:id="@+id/map"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_below="@+id/ivMarker"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
