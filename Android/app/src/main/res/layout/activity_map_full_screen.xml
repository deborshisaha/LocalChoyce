<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".activities.MapFullScreenActivity">

        <fragment
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:id="@+id/map"
                />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:id="@+id/rlFooter"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:background="#ffffff">

        <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ivItemPhoto"
                android:layout_height="100dp"
                android:layout_width="100dp"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="5dp"
                android:src="@color/colorAccent"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvItemName"
                android:layout_toRightOf="@+id/ivItemPhoto"
                android:layout_toEndOf="@+id/ivItemPhoto"
                android:layout_alignTop="@+id/ivItemPhoto"

                android:layout_alignRight="@+id/tvPrice"
                android:layout_alignEnd="@+id/tvPrice"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_alignBottom="@+id/ivItemPhoto"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@android:color/secondary_text_light_nodisable"
                />

        <TextView android:id="@+id/tvDesc"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/tvItemName"
                  android:layout_toRightOf="@+id/ivItemPhoto"
                  android:layout_toEndOf="@+id/ivItemPhoto"/>

    </RelativeLayout>

</LinearLayout>
