<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/ivOlNewIntroImageHolder"/>

    <TextView style="@style/RegularRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:layout_above="@+id/tvDescription" />

    <TextView style="@style/RegularLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:id="@+id/tvDescription"
        android:textColor="#EFEFEF"
        android:layout_marginBottom="120dp"
        android:textAlignment="center"
        android:paddingTop="8dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:paddingBottom="12dp" />

    <Button style="@style/RegularLight.CustomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnAction"
        android:textColor="#ffffff"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/fb_button_bg"
        android:layout_marginBottom="56dp"
        android:elevation="4dp"/>

</RelativeLayout>
