<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/llSellerAccountInfoContainer"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/sellerAccountSummaryContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sellerProductsContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:elevation="4dp"
            android:background="@color/material_design_gray_background"
            android:orientation="horizontal">

            <com.astuetz.PagerSlidingTabStrip style="@style/SmallLight"
                android:id="@+id/pstsSellerInventoryTab"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                android:textColor = "@color/colorPrimary"
                android:elevation="4dp"
                app:pstsUnderlineColor="@color/white"
                app:pstsIndicatorColor="@color/colorPrimary"
                app:pstsIndicatorHeight="4dp"
                app:pstsDividerColor="@color/white"
                app:pstsShouldExpand="true" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vpSellerInventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f5f7" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:id="@+id/fabAddProduct"
        android:elevation="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:layout_anchor="@id/pstsSellerInventoryTab"
        app:layout_anchorGravity="bottom|right|end"/>

</android.support.design.widget.CoordinatorLayout>