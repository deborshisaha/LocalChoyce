<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fashiome.android.activities.UserDetailsActivity"
    tools:showIn="@layout/activity_user_details"
    android:enabled="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DeepakBarge"
            android:id="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="DBarge"
            android:id="@+id/screenName"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screenName"
            android:text="New Text"
            android:id="@+id/description"
            android:autoLink="all"
            android:linksClickable="true"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="12sp"/>

        <!--ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/addUser"
            android:layout_alignTop="@+id/name"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/name"
            android:src="@drawable/ic_add_user"/-->

        <Button
            android:id="@+id/bAddUser"
            android:layout_alignTop="@+id/name"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/name"
            android:drawableLeft="@drawable/ic_plus"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:background="@drawable/button_bg_transparent"
            android:paddingLeft="5dp"/>

        </RelativeLayout>

    <LinearLayout
    android:id="@+id/llCountsContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/followingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:text="23"
        android:textStyle="bold"
        android:textColor="#d4385d"/>

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Following"
        android:textColor="#646363"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/followersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="23"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FFD4385D"/>

    <TextView
        android:id="@+id/Followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="Followers"
        android:textColor="#646363"
        android:textSize="12sp" />
</LinearLayout>

    <View style="@style/DividerHorizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/vDivider" />

    <android.support.design.widget.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b3bbc5" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>