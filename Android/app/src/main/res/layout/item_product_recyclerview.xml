<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:clipToPadding="false">

    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:id="@+id/rivProductPrimaryImage"

        app:riv_corner_radius="4dp"
        app:riv_mutate_background="false"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="50dp"
        android:background="@drawable/black_to_transparent"
        android:layout_alignParentTop="true">

        <TextView
            style="@style/RegularRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/tvPrice"
            android:text="$85"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:layout_marginRight="16dp"/>

        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:id="@+id/rivImg"
            app:riv_corner_radius="16dp"
            app:riv_border_color="#F5F5F5"
            app:riv_border_width="1dp"
            app:riv_mutate_background="false"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rivImg">

            <TextView style="@style/RegularRegular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:textColor="#ffffff"
                android:text="Test"
                android:id="@+id/tvProductByUserName"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="36dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="4dp"
        android:id="@+id/about_product_container"
        android:background="@drawable/transparent_to_black"
        android:layout_alignParentBottom="true" >

        <TextView style="@style/RegularRegular"
            android:id="@+id/tvProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#ffffff"/>

        <TextView style="@style/SmallLight"
            android:id="@+id/tvProductDescription"
            android:layout_below="@+id/tvProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:maxLines = "2"
            android:textSize="12sp"
            android:ellipsize="end"
            android:textColor="#ffffff" />

    </RelativeLayout>

</RelativeLayout>
