<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlHeader"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ivItemPhoto"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:scaleType="fitCenter"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemName"
        android:layout_toRightOf="@+id/ivItemPhoto"
        android:layout_toEndOf="@+id/ivItemPhoto"
        android:layout_alignTop="@+id/ivItemPhoto"
        android:layout_alignBottom="@+id/ivItemPhoto"
        android:layout_alignRight="@+id/tvDistance"
        android:layout_alignEnd="@+id/tvDistance"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDistance"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/ivItemPhoto"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/secondary_text_light_nodisable"
        />

    <TextView android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
              android:layout_below="@+id/tvItemName"
              android:layout_toRightOf="@+id/ivItemPhoto"
              android:layout_toEndOf="@+id/ivItemPhoto"/>

</RelativeLayout>