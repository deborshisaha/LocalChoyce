<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/banner"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.makeramen.roundedimageview.RoundedImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:id="@+id/rivImg"
        app:riv_corner_radius="36dp"
        app:riv_border_color="#F5F5F5"
        app:riv_border_width="2dp"
        android:src="@drawable/ic_account_circle_white"
        app:riv_mutate_background="false"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rivImg"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvBags"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Your name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/tvCoats"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBags"
        android:text="name@email.com"/>

    <Button style="@style/RegularLight.CustomButton"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="Login to Facebook"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvCoats"
            android:id="@+id/btnAction"
            android:textColor="#ffffff"
            android:onClick="loginToFacebook"
            android:background="@drawable/fb_button_bg"
            android:elevation="4dp"/>

</RelativeLayout>
