<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rlFooter"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/ivItemPhoto"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemName"
        android:layout_toRightOf="@+id/ivItemPhoto"
        android:layout_toEndOf="@+id/ivItemPhoto"
        android:layout_alignTop="@+id/ivItemPhoto"
        android:layout_alignRight="@+id/tvPrice"
        android:layout_alignEnd="@+id/tvPrice"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPrice"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/ivItemPhoto"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textColor="@android:color/secondary_text_light_nodisable"/>

    <TextView android:id="@+id/tvDesc"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/tvItemName"
              android:layout_toRightOf="@+id/ivItemPhoto"
              android:layout_toEndOf="@+id/ivItemPhoto"/>

</RelativeLayout>
