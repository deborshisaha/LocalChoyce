<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#dfc5cf"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/llProfileLogo"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/ivProfileLogo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType = "centerCrop"
            android:src="@drawable/ic_account_circle_white"
            app:riv_corner_radius="2dp"/>

        <ImageView
            android:id="@+id/ivLaunchMap"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_action_marker"
                android:onClick="launchMap"
                android:clickable="true"/>

        <android.support.v7.widget.SearchView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:icon="@android:drawable/ic_menu_search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20sp"
            android:id="@+id/tvTitle"
            android:textStyle="italic"
            android:typeface="serif"
            android:textColor="#808699"/>


    </LinearLayout>

</android.support.v7.widget.CardView>