<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llProfileLogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ivLaunchMap"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_marker"
            android:layout_toLeftOf="@+id/ivProfileLogo"
            android:layout_toStartOf="@+id/ivProfileLogo"
            android:layout_alignTop="@+id/ivProfileLogo"
            android:onClick="launchMap"
            android:clickable="true"/>

    <!--de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfileLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:onClick="getUserProfileLogo"
        android:src="@drawable/ic_account_circle_white"/-->

<com.makeramen.roundedimageview.RoundedImageView
    android:id="@+id/ivProfileLogo"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:riv_corner_radius="30dp"
    app:riv_border_color="#F5F5F5"
    app:riv_border_width="1dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_margin="10dp"
    android:onClick="getUserProfileLogo"
    android:src="@drawable/ic_account_circle_white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingRight="30dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:id="@+id/tvTitle"
        android:textStyle="italic"
        android:typeface="serif"
        android:textColor="#484b54"/>


</RelativeLayout>