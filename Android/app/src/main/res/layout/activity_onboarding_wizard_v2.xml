<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_design_gray_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView style="@style/BigMedium"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLookingFor"
        android:text="@string/lookingForText"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvFemale"
        app:cardElevation="1dp"
        app:cardCornerRadius="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/white"
        android:layout_below="@+id/tvLookingFor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBannerImageOfHer"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/her_blur"/>

            <TextView style="@style/BigMedium"
                android:id="@+id/tvHer"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:text="Her"/>


            <ImageView
                android:id="@+id/ivSelectedHer"
                android:scaleType="centerCrop"
                android:layout_toRightOf="@+id/tvHer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:src="@drawable/ic_selected"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cvMale"
        app:cardElevation="1dp"
        app:cardCornerRadius="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/white"
        android:layout_below="@+id/cvFemale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBannerImageOfHim"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/him_blur"/>

            <TextView style="@style/BigMedium"
                android:id="@+id/tvHim"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:text="Him"/>

            <ImageView
                android:id="@+id/ivSelectedHim"
                android:scaleType="centerCrop"
                android:layout_toRightOf="@+id/tvHim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:visibility="gone"
                android:src="@drawable/ic_selected"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView style="@style/BigRegular.Italics"
        android:id="@+id/next"
        android:layout_margin="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cvMale"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/colorSecondaryText"
        android:text="NEXT" />
</RelativeLayout>

