<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--item name="android:windowContentTransitions">true
        </item-->

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#c4c3c3</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">#9c9a9a</item>
    </style>

    <style name="RegularLight.CustomButton">
        <item name="android:background">@drawable/submit_state_button</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="RegularMedium.PanacheHomeToggleButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="TinyLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TinyRegular">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TinyMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="SmallLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallRegular">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SmallMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RegularLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegularRegular">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegularMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RegularBold">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BigLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigRegular">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BigRegular.Italics">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="BigMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HeaderLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderRegular">
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="HeaderMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PanacheAlertDialogStyle">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="textColorAlertDialogListItem">#FFFFFF</item>
        <item name="android:background">@drawable/panache_alert_dialog</item>
    </style>

</resources>
